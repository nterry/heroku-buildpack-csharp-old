#!/usr/bin/env ruby
require_relative '../lib/heroku-buildpack-csharp/utils/language-pack-manager'


build_dir = ARGV[0]

files = Dir.glob("#{build_dir}/*.sln")

language_pack = HerokuBuildpackCsharp::Utils::LanguagePackManager.new().s3 'heroku-languagepack-mono', '3.0.10'
language_pack.prepare '/tmp/dnld', '/tmp/slug', '/tmp/build'

if files.nil?
  exit 1
else
  puts 'C#'
  exit 0
end
